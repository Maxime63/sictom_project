<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.laetitia.sictomappli.PositionCourante"
    android:id="@+id/drawer_layout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            android:src="@drawable/map"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:layout_gravity="center"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table"
            android:layout_above="@+id/buttonConnexion"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Longitude"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:layout_column="0" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Latitude"
                    android:id="@+id/textView4"
                    android:gravity="center"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="X"
                    android:layout_weight="1"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Y"
                    android:gravity="center"

                    android:id="@+id/textView5"
                    android:layout_column="0" />
            </TableRow>
          </TableLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="fill_parent" android:layout_marginLeft="40dp"
        android:layout_height="fill_parent" android:layout_marginTop="20dp">
        <Button android:text="Alerte"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/buttonAlert"
            style="@style/ButtonText"
            android:background="@drawable/btn_red"
            ></Button>
        <Button android:text="Fin"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/buttonFin"
            style="@style/ButtonText"
            android:background="@drawable/btn_green"
            ></Button>
        </LinearLayout>

    </LinearLayout>

    <!-- The navigation drawer -->
    <TableLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"

        >
        <TableRow
            android:layout_width="240dp">
        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Activer mode connectÃ©"
            android:textColor="#ffffffff"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent">
        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="1dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="40dp"
            android:listSelector="@drawable/list_selector"/>
        </TableRow>
    </TableLayout>

</android.support.v4.widget.DrawerLayout>
